%!PS

% We only cover 245 days of the year - 360/245 = 1.47, so make this a 'degree'
/degrees {-1.47 mul} def

%setup font
/Palatino-Roman findfont
9 scalefont
setfont

%copyright & information
298 300 moveto
(Varroa data provided by Mac Howard : macmar73@gmail.com) dup stringwidth pop 2 div neg 0 rmoveto show
closepath
stroke



% Move to new position
298 370 translate


%edge border circle
0 0 210 0 360 arc
closepath
stroke


% Draw a tick, rotate 1 'degree'
/maketick {
/Palatino-Roman findfont
7.5 scalefont
setfont
    0 200 moveto		%move out 250y from centre
    0 10  rlineto		%draw (relative) 25 points
    closepath			%'finish' the shape
    stroke

    1 degrees rotate
%    -1.47 rotate
%    /inc inc 1 add def		%increment inc by 1 for each tick
} def

% Call maketick 245 times (1 tick per day
%/inc 0 def
1 1 245 {
maketick
} for

% undo rounding error in multiple rotations by restting graphics positions etc
/resetcoords {
initgraphics
298 370 translate
} def

% Draw a long line (mark section changes)
/longline {
0 170 moveto
0 30 rlineto
closepath
stroke
} def

% Draw a long line (mark gender changes)
/extralongline {
    0 0 moveto
    0 200 rlineto
} def

% Draw a dashed short line (as shortline)
/dashshortline {
    0 0 moveto
    0 170 moveto
    0 8 rlineto closepath stroke
    0 188 moveto
    0 8 rlineto closepath stroke
    0 220 moveto
} def


% Draw a dashed short line (as longline)
/dashlongline {
    0 0 moveto
    0 10 rlineto closepath stroke
    0 20 moveto
    0 10 rlineto closepath stroke
    0 40 moveto
    0 10 rlineto closepath stroke
    0 60 moveto
    0 10 rlineto closepath stroke
    0 80 moveto
    0 10 rlineto closepath stroke
    0 100 moveto
    0 10 rlineto closepath stroke
    0 120 moveto
    0 10 rlineto closepath stroke
    0 140 moveto
    0 10 rlineto closepath stroke
    0 160 moveto
    0 10 rlineto closepath stroke
    0 180 moveto
    0 10 rlineto closepath stroke
    0 200 moveto
    0 10 rlineto closepath stroke
    0 220 moveto
} def



resetcoords

%BEGIN VARROA

extralongline
longline

% Roaming hive for first 5 days
3 degrees rotate
gsave
0 152 moveto
90 rotate
(Roams Hive) show
grestore
2 degrees rotate
longline

% Enters cell on day 5
3 degrees rotate
gsave
0 160 moveto
90 rotate
(Enter Cell) show
grestore
2 degrees rotate
longline

% Attaches to pre-pupa day 10, lays eggs day 11
1 degrees rotate
gsave
0 102 moveto
90 rotate
(Attach to Pupa, Lays Eggs) show
grestore
1 degrees rotate
longline

% Eggs hatch day 12 (male) day 13-14 (female)
2 degrees rotate
gsave
0 155 moveto
90 rotate
(Eggs Hatch) show
grestore
2 degrees rotate
longline


% Mites mate (day 16-18)
2 degrees rotate
gsave
0 155 moveto
90 rotate
(Mites Mate) show
grestore
2 degrees rotate
longline

% Mites (and bee) emerge (worker) (day 20-21)
1 degrees rotate
gsave
0 110 moveto
90 rotate
(Worker & Mites Emerge) show
grestore
1 degrees rotate
dashshortline

% Gap between worker and drone emergence
2 degrees rotate
dashshortline


% Mites (and bee) emerge (drone) (day 23-24)
1 degrees rotate
gsave
0 115 moveto
90 rotate
(Drone & Mites Emerge) show
grestore
1 degrees rotate
extralongline
longline

%%% END VARROA

